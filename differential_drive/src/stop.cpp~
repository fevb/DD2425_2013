#include "ros/ros.h"
#include "std_msgs/UInt16.h"


/**
 * Publish a Stop request when launched.
 */
int main(int argc, char **argv)
{
 
  ros::init(argc, argv, "stop");

  ros::NodeHandle n;

  ros::Publisher chatter_pub = n.advertise<std_msgs::UInt16>("stop", 1000);

  if (ros::ok())
  {

    std_msgs::UInt16 msg;

    msg.data = 1;

    ROS_INFO("Stop command sended");

    chatter_pub.publish(msg);

    ros::spinOnce();

  }


  return 0;
}
